{
    "name": "valga/fbns-react",
    "description": "A PHP client for the FBNS built on top of ReactPHP",
    "keywords": [
        "FBNS",
        "Client",
        "PHP"
    ],
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Abyr Valg",
            "email": "valga.github@abyrga.ru"
        }
    ],
    "bin": [
        "bin/thrift_debug"
    ],
    "autoload": {
        "psr-4": {
            "Fbns\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fbns\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "evenement/evenement": "~2.0|~3.0",
        "react/event-loop": "^1.1",
        "react/promise": "^2.7",
        "react/socket": "^1.3",
        "binsoul/net-mqtt": "^0.7",
        "psr/log": "~1.0",
        "binsoul/net-mqtt-client-react": "^0.7.1",
        "ramsey/uuid": "^3.9"
    },
    "require-dev": {
        "monolog/monolog": "~1.23",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^8.5.2"
    },
    "suggest": {
        "ext-event": "For more efficient event loop implementation.",
        "ext-gmp": "To be able to run this code on x86 PHP builds."
    },
    "scripts": {
        "codestyle": "php-cs-fixer fix --config=.php_cs",
        "test": "phpunit tests"
    }
}
